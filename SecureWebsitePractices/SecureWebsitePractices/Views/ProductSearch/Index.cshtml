@model SecureWebsitePractices.Models.ProductModel
@{
    ViewBag.Title = "Index";
}

<h2>Product Search</h2>
<br />

@using (Html.BeginForm("ProductSearch", "SearchProducts", FormMethod.Post, "autocomplete = false"))
{
    @*<table cellpadding="0" cellspacing="0">*@

    <h3>Search for Products by ID or Name</h3>
    <br /><br />
        <div>
            <h4>Product Id: </h4>

            <input type="text" name="id" value="@Model.ProductKey" />

            <p>or</p>

            <h4> Product Name: </h4>
            <input type="text" id="name" value="@Model.ProductName" /><br /><br />
        </div>
        <div><input type="submit" value="Submit" /></div>

}

